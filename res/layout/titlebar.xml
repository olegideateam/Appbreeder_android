<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_margin="0dp" android:padding="0dp" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/RelativeLayoutViewTitle">

	<TextView android:id="@+id/TextView01_TitleBar"
		android:textSize="20dp" android:textColor="#FFF" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textStyle="bold"
		android:layout_centerInParent="true" android:gravity="center"
		android:lines="1" />
	<ProgressBar android:id="@+id/ProgressBarCustomTitle" android:layout_alignParentRight="true"
	android:layout_centerVertical="true"
	android:layout_height="25dp" android:visibility="invisible"
	android:layout_width="25dp"  android:layout_marginRight="5dp" />



</RelativeLayout>